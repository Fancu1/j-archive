{
  "manifest_version": 3,
  "name": "J-Archive: Universal Archive Finder",
  "version": "2.0.0",
  "description": "Find archived versions of any webpage on archive.ph - click the extension icon to search",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://archive.ph/*"
  ],
  
  "background": {
    "service_worker": "dist/background-standalone.js"
  },
  
  "action": {
    "default_title": "J-Archive: Find archived version of current page",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 
